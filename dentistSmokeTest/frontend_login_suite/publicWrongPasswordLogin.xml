<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:ate="http://www.bigtester.org/schema/ate" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	http://www.bigtester.org/schema/ate http://www.bigtester.org/schema/ate/ate.xsd">
	<!-- this registers beans annotated with @Aspect -->
	<aop:aspectj-autoproxy />

	<import resource="classpath:META-INF/logger-reporter.xml" />
	<import resource="classpath:META-INF/abstract_parent_bean2.xml" />
	<import resource="classpath:META-INF/case_base_bean.xml" />
	<import resource="../pageObjects/publicHomePage.xml" />
	<import resource="../pageObjects/publicLoginPage.xml" />
	<import resource="../pageObjects/lastPage.xml" />
	
	<ate:testCase id="testcase" testCaseName="Validate public login and logout">
		<ate:homeStep id="openPublicHomePage" stepName="openPublicHomePage"
			stepDescription="open my public home page" targetStep="false">
			<property name="homepg">
				<ref bean="publicHomePage" />
			</property>
		</ate:homeStep>
		<ate:elementStep id="publicLogin_clickLoginLink"
			stepDescription="Click login link to log in" stepName="clickLoginLink"
			targetStep="true" myWebElement="publicLoginLinkWE" lazy-init="true">
			<property name="pageObject">
				<ref bean="publicLoginPage" />
			</property>
			<property name="expectedResultAsserter" >
				<list>
					<ref bean="publicLoginPageElementExistenceAsserter" />
					<ref bean="publicLoginPagePropertyAsserter" />
				</list>
			</property>
		</ate:elementStep>
		<ate:elementStep id="publicLogin_typeUsername"
			stepDescription="type in public user name" stepName="typeUsername"
			targetStep="true" myWebElement="loginUserNameWE">
		</ate:elementStep>
		<ate:elementStep id="publicLogin_typeWrongPassword"
			stepDescription="type in public user wrong password" stepName="typeWrongPassword"
			targetStep="true" myWebElement="loginWrongPasswordWE">
		</ate:elementStep>
		<ate:elementStep id="publicLogin_clickLoginButton"
			stepDescription="click Login button to log in" stepName="clickLoginButton"
			targetStep="true" myWebElement="clickLoginButtonWE">
			<property name="pageObject">
				<ref bean="publicLoginPage" />
			</property>
			<property name="expectedResultAsserter">
				<list>
					<ref bean="publicLoginWrongPasswdElementExistenceAsserter" />
				</list>
			</property>
		</ate:elementStep>
		<ate:lastStep id="mylaststep" stepName="mylaststep"
			stepDescription="last step close browser" targetStep="false">
			<property name="lastPage">
				<ref bean="myLastPage" />
			</property>
		</ate:lastStep>
	</ate:testCase>


</beans>